/* Footer bottom bar */
.footer-bottom {
  /* text color */
  color: #facc15;            /* Yellow */

  /* optional: background & styling */
  background: #1f2937;       /* Dark gray */
  padding: 12px 16px;
  border-top: 1px solid #334155;
  text-align: center;
}

/* If you only want to change text color, keep just the 'color' line. */

/* (Optional) Theme via CSS variables you already use */
:root {
  --qto-yellow: #facc15;
  --qto-dark: #1f2937;
}
.footer-bottom {
  color: var(--qto-yellow);
  background: var(--qto-dark);
}

/* (Optional) dark mode tweak */
@media (prefers-color-scheme: dark) {
  .footer-bottom {
    background: #0f172a;   /* darker */
    color: #fde68a;        /* softer yellow */
  }
}

  
